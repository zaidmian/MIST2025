/* Dark mode toggle button styles */
.dark-mode-toggle {
  position: fixed;
  top: 20px;
  right: 20px;
  background: #333;
  color: white;
  border: none;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  z-index: 1000;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
}

.dark-mode-toggle:hover {
  background: #555;
}

.dark-mode-toggle i {
  font-size: 16px;
}

/* Dark mode styles that will be applied when .dark-theme class is present */
.dark-theme {
  background-color: #121212;
  color: #e0e0e0;
}

.dark-theme h1 {
  color: #ffffff;
}

.dark-theme .card {
  background-color: #2d2d2d;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
}

.dark-theme .card:hover {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.6);
}

.dark-theme .card-title {
  color: #e0e0e0;
  border-bottom: 1px solid #444;
}

.dark-theme .card-text {
  color: #b0b0b0;
}
